@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}

<link rel="stylesheet" href="css/texty.css" />

<body>
    <section>
        <div class="login-box">

            <form action="" id="account" method="post">
                <h2>تسجيل الدخول</h2>
                <br />
                <div class="input-box">
                    <span class="icon"><ion-icon name="mail-sharp"></ion-icon></span>
                    <input type="email" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <div asp-validation-summary="ModelOnly" class="input-box" role="alert"></div>
                    <label asp-for="Input.Password" class="form-label">البريد الإلكتروني</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br />

                <div class="input-box">
                    <span class="icon"><ion-icon name="lock-open"></ion-icon></span>
                    <input type="password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">كلمة السر</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3 remember-forget">
                    <label asp-for="Input.RememberMe" class="remem">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @* @Html.DisplayNameFor(m => m.Input.RememberMe) *@
                        تذكر تسجيل دخولي
                    </label>
                    <a id="forgot-password" asp-page="./ForgotPassword">نسيت كلمة السر؟</a>
                </div>
                <br />
                <div>
                    <button id="login-submit" type="submit" class="main-btn">تسجيل الدخول</button>
                </div>

                <div class="register-link">
                    <p>
                        ليس لديك حساب؟
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">تسجيل</a>

                    </p>
                </div>

            </form>
        </div>
    </section>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'poppins', sans-serif;
    }

    body {
        background: url(/images/f10.jpeg) no-repeat;
        background-size: cover;
        background-position: center;
    }

    section {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100vh;
    }

    .login-box {
        position: relative;
        width: 90%;
        max-width: 425px;
        height: auto;
        padding: 30px 20px;
        background: transparent;
        backdrop-filter: blur(15px);
        border: 2px solid rgba(255, 255, 255, .5);
        border-radius: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    h2 {
        font-size: 1.2em;
        color: #fff;
        text-align: center;
        margin-right: 25px;
        padding-top: 7px;
        padding-bottom: 7px;
    }

    .input-box {
        position: relative;
        width: 310px;
        margin: 20px 0;
        border-bottom: 2px solid #fff;
    }

        .input-box label {
            position: absolute;
            top: 50%;
            left: 5px;
            transform: translateY(-50%);
            font-size: 1em;
            color: #fff;
            pointer-events: none;
            transition: .5s;
        }


    label.form-label {
        text-align: right;
        right: 15px;
        padding-bottom: 5px;
    }

    .input-box input:focus ~ label,
    .input-box input:valid ~ label {
        top: -15px;
    }

    .input-box input {
        width: 100%;
        height: 50px;
        background: transparent;
        border: none;
        outline: none;
        font-size: 1em;
        color: turquoise;
        padding: 0 35px 0 5px;
    }

    .input-box .icon {
        position: absolute;
        right: 8px;
        color: turquoise;
        font-size: 1.2em;
        line-height: 57px;
    }

    form-label {
        margin-right: 3px;
    }

    /* Remember/Forget links */
    .remember-forget {
        font-size: .9em;
        color: #fff;
        display: flex;
        justify-content: space-between;
        width: 100%;
        flex-wrap: wrap;
        margin: 10px 0 15px;
    }

        .remember-forget label {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: .9em;
            color: whitesmoke;
        }

        .remember-forget a {
            color: #fff;
            text-decoration: none;
        }

            .remember-forget a:hover {
                text-decoration: underline;
            }

    /* Button */
    .main-btn {
        display: block;
        margin: 20px auto; /* Auto-centering horizontally */
        font-family: Arial;
        text-align: center center;
        color: #fff;
        font-size: 1.05em;
        font-weight: 700;
        background-color: turquoise;
        height: 40px;
        width: 150px;
        border-radius: 14px;
        border: 1px solid #000;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }



        .main-btn:hover {
            color: whitesmoke;
            background-color: transparent;
            border-color: turquoise;
            transform: scale(1.05);
        }

    /* Register link */
    .register-link {
        font-size: .9em;
        color: #fff;
        text-align: center;
        margin: 20px 0 10px;
    }

        .register-link p a {
            color: #fff;
            text-decoration: none;
            font-weight: 600;
        }

            .register-link p a:hover {
                text-decoration: underline;
            }

</style>